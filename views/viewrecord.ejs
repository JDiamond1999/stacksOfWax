<% if (userdata.length > 0) { %>
  <%- include('membernavbar', {active: "view record"}) %>
  <% } else {%> 
  <%- include('navbar', {active: "view record"}) %>
  <% } %>

<!-- Beginning of view Record Section -->
<section class="vh-100">
  <div class="container container-fluid h-custom pt-5 pb-3">
    <div class="container pb-5 mb-4">
      <header class="pb-3 mb-5 border-bottom"></header>

      <div class="row d-flex justify-content-center align-items-left h-100">
        <div class="column col-md-9 col-lg-12 mb-1 pt-5">
          <div class="card mx-auto" style="width: 25rem">
            <img
              class="card-img-top"
              src="<%= rowdata[0].cover_image %>"
              alt="Card image cap"
            />
          </div>
        </div>
        <div
          class="column col-md-8 col-lg-6 col-xl-6 pt-1 mt-1 mb-1 pt-sm-3 mt-sm-3 mx-auto"
        >
        <div class="form-outline mb-4 text-center">
          <h3 class="pb-2"><%= rowdata[0].record_name %></h3>
          <% if (userdata[0].user_id == userid) { %>
            <div class="pb-5 mb-3">
              <form
                action="removerecord?recordid=<%= rowdata[0].record_id %>"
                method="POST"
              >
                <button
                  class="buttonDefault btn btn-danger text-white"
                  type="submit"
                  data-bs-toggle="tooltip"
                  data-bs-placement="right"
                  title="Remove Record"
                >
                  - REMOVE RECORD
                </button>
              </form>
            <form>
              <!-- Title -->
              
                </div>
          <% } %>
          
              <h5 class="pb-1">
                <p class="pinktext font-weight-bold">Artist Name:</p>
                <p><%= rowdata[0].artist_name %></p>
              </h5>

              <h5 class="pb-1">
                <p class="pinktext font-weight-bold">Record Label:</p>
                <p><%= rowdata[0].record_label %></p>
              </h5>
              <h5 class="pb-1">
                <p class="pinktext font-weight-bold">Year of Release:</p>
                <p><%= rowdata[0].year_of_release %></p>
              </h5>
              <h5 class="pb-1">
                <p class="pinktext font-weight-bold">Genre:</p>
                <p><%= genredata[0].genre_name %></p>
              </h5>
              

              <p>
                <button
                  class="enlarge btn btn-danger"
                  type="button"
                  data-toggle="collapse"
                  data-target="#collapseExample"
                  aria-expanded="false"
                  aria-controls="collapseExample"
                >
                  More Info
                </button>
              </p>
              <div class="collapse" id="collapseExample">
                <div class="card card-body">
                  <ul class="list-unstyled">
                    <% rowdata.forEach(track => { %>

                      <% if (track.track_name == `Tracklist:`) { %>
                       <strong class = "pinktext"> Tracklist:</strong>
                      <% } else { %>
                       
                    <li class = "pt-1"><%= track.track_name %></li>

                    <% }}) %>
                  </ul>

                  <% if (userdata[0].user_id == userid) { %>
                    <a href="\edittracklist?recordid=<%= rowdata[0].record_id %>">
                      <button
                        class="enlarge btn btn-outline-secondary text-white"
                        type="button"
                      >
                        Edit Tracklist
                      </button>
                    </a>
                  <% } %>

                  <strong class = "pinktext pt-5 pb-3"> What is <%= genredata[0].genre_name %>?</strong>
                  <p><%= genredata[0].genre_desc %></p>
                  
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End of view Record Section -->

<%- include('footer') %>
