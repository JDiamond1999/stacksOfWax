<% if (userdata.length > 0) { %>
<%- include('membernavbar', {active: "sign in"}) %>
<% } else {%> 
<%- include('navbar', {active: "sign in"}) %>
<% } %>

<!-- Beginning of Login Section -->
<section class="vh-100">
  <div class="container container-fluid h-custom pt-2 pb-2 mb-5 mt-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <% if (userdata.length > 0) { %>
        <h2 class="pb-5 mb-4 text-center">
          <span class="pinktext">Currently signed in as </span>
          <span><%= userdata[0].username %></span>
        </h2>
        <% } else { %> 
          <div class="column col-12">
          <h2 class="pb-5 mb-4 text-center">
            <span class="pinktext">Sign in to </span>
            <span> get started!</span>
          </h2>
        </div>
          <% } %>
      <div class="column col-md-9 col-lg-7 mb-4 mb-sm-0">
        
        <img
          src="signUpRecord2.jpg"
          class="img-fluid rounded mx-auto d-block"
          width="500rem"
          alt="Sample image"
        />
      </div>
      <div
        class="column col-md-8 col-lg-6 col-xl-4 offset-xl-1 pt-1 mt-1 mb-1 pt-sm-3 mt-sm-3"
      >
        <form action="signin" method="POST">
          <!-- Email input -->
          <div class="form-outline mb-4">
            <input
              type="email"
              id="form3Example3"
              class="form-control form-control-lg"
              placeholder="Enter a valid email address"
              name="email_field"
            />
            <label class="form-label" for="form3Example3">Email address</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <input
              type="password"
              id="form3Example4"
              class="form-control form-control-lg"
              placeholder="Enter password"
              name="password_field"
            />
            <label class="form-label" for="form3Example4">Password</label>
          </div>

          

          <div class="text-center text-lg-start mt-4 pt-2">
            <button
              type="submit"
              value="send"
              class="button1 btn btn-lg text-white"
              style="padding-left: 2.5rem; padding-right: 2.5rem"
            >
              Login
            </button>
            <p class="small fw-bold mt-2 pt-1 mb-0">
              Don't have an account?
              <a href="register" class="link">Register</a>
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<!-- End of Login Section -->

<%- include('footer') %>
