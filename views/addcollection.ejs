<%- include('navbar', {active : "add record"}) %>

<!-- Beginning of Add Record Section -->
<section class="vh-100">
  <div class="container container-fluid h-custom pt-5 pb-5 mb-5">
    <h1 class="text-dark">Add a Collection</h1>

    <div class="container pb-5 mb-4">
      <header class="pb-3 mb-5 border-bottom"></header>

      <div class="row d-flex justify-content-center align-items-left h-100">
        <div
          class="col column col-md-10 col-lg-6 mb-4 mb-lg-5 pt-3 mt-lg-3 pt-lg-5 pr-lg-5 mr-xlg-5"
        >
          <form action="addcollection" method="POST">
            <div>
              <div class="mb-4 d-flex justify-content-center">
                <img
                  src="placeholder.jpg"
                  alt="example placeholder"
                  style="width: 300px"
                />
              </div>
              <div class="form-outline">
                <input
                  type="imagelink"
                  name = "imagelink"
                  id="form1"
                  class="form-control form-control-lg"
                  placeholder="Enter the Link to Your Cover Image"
                />
                <label class="form-label" for="form1">Image Link</label>
              </div>
            </div>
          
        </div>
        <div class="column col-md-8 col-lg-6 col-xl-4 pt-1 mt-1 mb-1 pt-3 mt-lg-5">
          
            <!-- Title input -->
            <div class="form-outline mb-4">
              <input
                name="title"
                type="title"
                id="form1"
                class="form-control form-control-lg"
                placeholder="Enter collection name"
              />
              <label class="form-label" for="form1">Collection Name</label>
            </div>

           <!-- Description input -->
           <div class="form-group">
            <textarea
              name="description"
              class="form-control"
              id="exampleFormControlTextarea1"
              rows="3"
              placeholder="Enter a description for your collection"
            ></textarea>
            <label for="exampleFormControlTextarea1"
              >Collection Description</label
            >
          </div>

          <div class="form-outline mb-3"></div>
            <select
              class="form-select form-select mb-3 p-2"
              aria-label=".form-select-lg example"
              name = "record"
            >
              <option selected>--Add First Record--</option>
              <% rowdata.forEach(record => { %>
              <option value="<%= record.record_id %>"><%= record.record_name %></option>
              <% }) %>
            </select>

            <div class="login text-center text-lg-start mt-4 pt-2">
              <button
                type="submit"
                class="button1 btn btn-lg text-white"
                style="padding-left: 2.5rem; padding-right: 2.5rem"
                value="Add Collection"
              >
                Add Collection +
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End of Add Record Section -->

<%- include('footer') %>



            

            