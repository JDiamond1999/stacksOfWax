<%- include('navbar', {active : "view record"}) %>

<div class="row d-flex justify-content-center align-items-left h-100 pt-5 pb-5">
  <div class="column col-8 col-md-6 col-xl-4 pt-1 mt-1 mb-1 pt-3 mt-3">
    <div class="card mx-auto" style="width: 15rem">
      <img
        class="card-img-top"
        src="<%= rowdata[0].cover_image %>"
        alt="Card image cap"
      />
    </div>
    <h3 class="pb-4 pt-4 text-center">
      Edit Tracks For: <%= rowdata[0].record_name %>
    </h3>

    <% rowdata.forEach(element => { %>
    <form action="removetrack?recordid=<%= element.record_id %>" method="POST">
      <div class="input-group input-group-lg mb-3">
        <input
          type="text"
          class="form-control"
          value="<%= element.track_name %>"
          aria-label="track name"
          aria-describedby="basic-addon2"
          name="trackname"
        />
        <div class="input-group-append">
          <button
            class="buttonDefault btn btn-danger text-white color-default"
            type="submit"
            data-bs-toggle="tooltip"
            data-bs-placement="right"
            title="Remove Track from Record"
          >
            -
          </button>
          <!-- Passing track_id through a hidden div for each input field -->
          <input type="hidden" name="trackid" value="<%= element.track_id %>" />
        </div>
      </div>
    </form>
    <% }) %>

    <form action="addtrack?recordid=<%= rowdata[0].record_id %>" method="POST">
      <div class="input-group input-group-lg mb-3 pt-5">
        <input
          type="text"
          class="form-control"
          placeholder="Type Track Name and Press Add"
          aria-label="Add a Track"
          aria-describedby="basic-addon2"
          name="addtrack"
        />
        <div class="input-group-append">
          <button
            class="button1 btn btn-danger text-white"
            type="submit"
            data-bs-toggle="tooltip"
            data-bs-placement="right"
            title="Add Track to Record"
          >
            +
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

<%- include('footer') %>
