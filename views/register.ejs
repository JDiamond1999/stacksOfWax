<%- include('navbar', {active : "register"}) %>

<!-- Beginning of Login Section -->
<section class="vh-100 bg-image">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
      <div class="container h-100 mt-5 mb-5 pt-3 pb-3">
        <div
          class="row d-flex justify-content-center align-items-center h-100"
        >
          <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card" style="border-radius: 15px">
              <div class="card-body p-5">
                <h2 class="text-uppercase text-center mb-5">
                  Create an account
                </h2>

                <form action="signup" method="POST">
                  <div class="form-outline mb-4">
                    <input
                      type="username"
                      name="username_field"
                      placeholder="Enter your Chosen Username"
                      id="form3Example1cg"
                      class="form-control form-control-lg"
                    />
                    <label class="form-label" for="form3Example1cg"
                      > Username</label
                    >
                  </div>
                  <div class="form-outline mb-4">
                    <input
                      type="first name"
                      name="first_name_field"
                      placeholder="Enter your First Name"
                      id="form3Example1cg"
                      class="form-control form-control-lg"
                    />
                    <label class="form-label" for="form3Example1cg"
                      >First Name</label
                    >
                  </div>

                  <div class="form-outline mb-4">
                    <input
                      type="last name"
                      name="last_name_field"
                      placeholder="Enter your Last Name"
                      id="form3Example1cg"
                      class="form-control form-control-lg"
                    />
                    <label class="form-label" for="form3Example1cg"
                      >Last Name</label
                    >
                  </div>

                  <div class="form-outline mb-4">
                    <input
                      type="email"
                      name="email_field"
                      placeholder="Enter your Email"
                      id="form3Example3cg"
                      class="form-control form-control-lg"
                    />
                    <label class="form-label" for="form3Example3cg"
                      >Email</label
                    >
                  </div>

                  <div class="form-outline mb-4">
                    <input
                      type="password"
                      name="password_field"
                      placeholder="Enter your Password"
                      id="form3Example4cg"
                      class="form-control form-control-lg"
                    />
                    <label class="form-label" for="form3Example4cg"
                      >Password</label
                    >
                  </div>

                  <div class="form-outline mb-4">
                    <input
                      type="photo"
                      name="photo_field"
                      placeholder="Enter an Image link"
                      id="form3Example4cg"
                      class="form-control form-control-lg"
                    />
                    <label class="form-label" for="form3Example4cg"
                      >Profile Picture</label
                    >
                  </div>

                  <div class="d-flex justify-content-center">
                    <button
                      type="submit"
                      value="send"
                      class="button1 btn btn-block btn-lg gradient-custom-4 text-white"
                    >
                      Register
                    </button>
                  </div>

                  <p class="text-center text-muted mt-5 mb-0">
                    Have already an account?
                    <a href="\signin" class="fw-bold text-body"
                      ><u>Login here</u></a
                    >
                  </p>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- End of Login Section -->

  <%- include('footer') %>
